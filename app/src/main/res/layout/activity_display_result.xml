<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.tipcalculator.isaac.tipcalculator.DisplayResult">

    <TextView android:id="@+id/bill_title"
        android:layout_marginRight="10sp"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/bill" />

    <TextView android:id="@+id/bill_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/bill_title"
        android:layout_alignTop="@id/bill_title"
        android:text="0$"/>

    <TextView android:id="@+id/tip_title"
        android:layout_marginRight="10sp"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tip"
        android:layout_below="@id/bill_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView android:id="@+id/tip_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0$"
        android:layout_toRightOf="@id/tip_title"
        android:layout_alignTop="@id/tip_title"/>

    <TextView android:id="@+id/split_bill_title"
        android:layout_marginRight="10sp"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/split_bill_res"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tip_title"/>

    <TextView android:id="@+id/split_bill_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0$"
        android:layout_alignTop="@id/split_bill_title"
        android:layout_toRightOf="@id/split_bill_title"/>

    <TextView android:id="@+id/split_tip_title"
        android:layout_marginRight="10sp"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/split_tip_res"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/split_bill_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0$"
        android:id="@+id/split_tip_amount"
        android:layout_alignTop="@id/split_tip_title"
        android:layout_toRightOf="@id/split_tip_title"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/back_res"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
